<div class="container">
    <h1>Eat-Da-Burger!</h1>

    <img class='img-fluid w-25 h-25'
        src='https://vignette.wikia.nocookie.net/spongebob/images/d/d4/Krabby_Patty_transparentpng.png/revision/latest?cb=20170310181007'
        alt="Krabby Patty">

    <div class="row">
        <div class="col-6">
            <ul id="uneaten" class="list-group"></ul>
            {{#each burgers}}
            {{#unless this.devoured}}
            <li class="list-group-item">
                {{this.burger_name}}
                <button class="devour-btn btn btn-primary btn-sm" data-burger-id={{this.id}}>Devour</button>
            </li>
            {{/unless}}
            {{/each}}
        </div>

        <div class="col-6">
            <ul id="eaten" class="list-group">
                {{#each burgers}}
                {{#if this.devoured}}
                <li class="list-group-item">{{this.burger_name}}</li>
                {{/if}}
                {{/each}}
            </ul>
        </div>

    </div>

    <br>
    <input id="newBurger" type="text">
    <button class="btn btn-sm btn-dark" id="submit" type="submit">Submit</button>
    <br>
    <br>
    <p>Enter a burger you want to eat!</p>
    <p>Then hit the submit button.</p>
    <br>
    <button class="btn btn-dark" id="reset">Reset</button>
    <br>
    <br>
    <br>
</div>

<script src="/js/devour_burger.js"></script>